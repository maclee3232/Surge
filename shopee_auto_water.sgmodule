#!name=蝦蝦果園自動化
#!desc=每天自動做水滴任務，接近隔天午夜會自動把今天任務的獎勵全部用掉。每小時自動澆水，每次換作物後需先手動澆水一次，讓 Surge 紀錄目前的作物。道具商店水滴需先手動領一次，往後會自動領。需要同時開啟每日自動簽到以獲得 token。 v20220727

[Script]
cron "10 10,14,18 * * *" script-path=https://kinta.ma/surge/scripts/shopee_water_checkin.js, wake-system=1, timeout=5
cron "14 0 * * *" script-path=https://kinta.ma/surge/scripts/shopee_water_buy_free_item.js, wake-system=1, timeout=5
cron "8 0,8,23 * * *" script-path=https://kinta.ma/surge/scripts/shopee_water_mission.js, wake-system=1, timeout=30
cron "4 0,8,9,12,15,18,21 * * *" script-path=https://kinta.ma/surge/scripts/shopee_auto_water.js, wake-system=1, timeout=5
cron "34 10,13,16,19,22 * * *" script-path=https://kinta.ma/surge/scripts/shopee_auto_water.js, wake-system=1, timeout=5
cron "57 8,23 * * *" script-path=https://kinta.ma/surge/scripts/shopee_water_signin_bundle.js, wake-system=1, timeout=30
cron "58 8,23 * * *" script-path=https://kinta.ma/surge/scripts/shopee_water_mission_claim.js, wake-system=1, timeout=30
cron "59 8,23 * * *" script-path=https://kinta.ma/surge/scripts/shopee_grocery_store_water.js, wake-system=1, timeout=30
shopee_get_crop.js = type=http-request,pattern=^https:\/\/games\.shopee\.tw\/farm\/api\/orchard\/crop\/water(.*),script-path=https://kinta.ma/surge/scripts/shopee_get_crop.js,requires-body=true,script-update-interval=-1
shopee_get_grocery_store_token.js = type=http-request,pattern=^https:\/\/games\.shopee\.tw\/farm\/api\/grocery_store\/claim,script-path=https://kinta.ma/surge/scripts/shopee_get_grocery_store_token.js,requires-body=true,script-update-interval=-1

[MITM]
hostname = %APPEND% games.shopee.tw
